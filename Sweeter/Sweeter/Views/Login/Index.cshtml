@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" href="~/lib/src/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/src/style_Green .css">
    <link rel="icon" type="image/png" href="~/lib/img/logo.png">
    <link rel="shortcut icon" href="~/lib/img/logo.png" type="image/png">
    <title>Entering Jay</title>
</head>
<body>
    <div class="forma">
        <form method="post">
            <div class="row">
                <div class="col-md-5 col-xs-4 col-lg-5 col-sm-5"></div>
                <div class="col-md-2 col-xs-4 col-lg-2 col-sm-2">
                    <span style="text-align:center"><img src="~/lib/img/logo.png" class="logo"></span>
                </div>
                <div class="col-md-5 col-xs-4 col-lg-5 col-sm-5"></div>

            </div>
            <div class="row">
                <div class="col-md-2 col-xs-1 col-lg-2 col-sm-2"></div>
                <div class="col-md-8 col-xs-10 col-lg-8 col-sm-8">

                    <h1 class="headlabel">We are waiting for you.</h1>
                    <h1 class="headlabel">Just sign in.</h1>

                    <h1></h1>

                </div>
                <div class="col-md-2 col-xs-1 col-lg-2 col-sm-2"></div>
            </div>

            <div class="row">
                <div class="col-md-3 col-xs-0 col-lg-3 col-sm-3"></div>
                <div class="col-md-6 col-xs-12 col-lg-6 col-sm-6">
                    <p style="text-align:center"><label for="email">Your E-mail </label>
                    <p style="text-align:center"><input type="email" name="email" id="email" class="textin">
                </div>
                <div class="col-md-3 col-xs-0 col-lg-3 col-sm-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3 col-xs-0 col-lg-3 col-sm-3"></div>
                <div class="col-md-6 col-xs-12 col-lg-6 col-sm-6">
                    <p style="text-align:center"><label for="password">Your Password </label>
                    <p style="text-align:center"><input type="password" name="password" id="password" class="textin"/>
                    <p style="text-align:center"><input type="checkbox" name="Persistent" id="Persistent"  /> <label for="Persistent">Remember me</label>
                </div>
                <div class="col-md-3 col-xs-0 col-lg-3 col-sm-3"></div>
            </div>

            <div class="row">
                <div class="col-md-3 col-xs-0 col-lg-3 col-sm-3"></div>
                <div class="col-md-6 col-xs-12 col-lg-6 col-sm-6">
                    <p style="text-align:center"><input type="submit" name="login" class="but" value="Log in">
                </div>
                <div class="col-md-3 col-xs-0 col-lg-3 col-sm-3"></div>
            </div>

        </form>
    </div>
</body>
</html>